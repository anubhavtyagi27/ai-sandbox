# AI Sandbox - Multi-Provider API Client Configuration

# ============================================================================
# 1Password Secret References (one per provider)
# ============================================================================
# Format: op://vault-name/item-name/field-name

# OpenAI API Key (REQUIRED)
OP_ITEM_REFERENCE_OPENAI=op://Projects/OpenAI API Key/credential

# Google Gemini API Key (optional - for future use)
# OP_ITEM_REFERENCE_GEMINI=op://Projects/Google Gemini Key/credential

# Anthropic API Key (optional - for future use)
# OP_ITEM_REFERENCE_ANTHROPIC=op://Projects/Anthropic Key/credential

# ============================================================================
# Application Configuration
# ============================================================================

# Default AI provider (openai, gemini, anthropic)
DEFAULT_PROVIDER=openai

# Flask Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Environment (development or production)
FLASK_ENV=development

# ============================================================================
# Optional Settings
# ============================================================================

# API request timeout in seconds (removed - now unlimited)
# OPENAI_API_TIMEOUT=30
